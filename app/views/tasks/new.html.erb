<h1>Add Task</h1>

<%= form_for [@task_list, @task] do |f| %>
    <% if flash[:error] %>
        <span class="flash-error"><%= flash[:error] %></span>
    <%end%>
    <div>
      <%= f.label :description %>
      <%= f.text_field :description %><br>
      <%= select_date Date.today, prefix: :date %>
      <%= f.hidden_field :task_list_id%>
    </div>
    <div>
      <%= f.submit "Add Task" %>
    </div>
<% end %>