<%= form_for @user, url: signin_path, html: { class: "signin-form"} do |f| %>
    <% f.object.errors.full_messages.each do |error| %>
        <div class="errors">
          <%= error %>
        </div>
        <% end %>
        <div>
          <%= f.label :email %>
          <%= f.text_field :email %>
        </div>
        <div>
          <%= f.label :password %>
          <%= f.text_field :password %>
        </div>
        <div>
          <%= f.submit "Login" %>
          <%= link_to "About", about_path %>
        </div>
    <% end %>