<h1>My Tasks <p class="inline"><%= link_to "+Add Task List", new_task_list_path %></p></h1>

<br>

<% if flash[:notice] %>
    <span class="flash"><%= flash[:notice] %></span>
<% end %>


<br>
<table class="table_fields">
  <tr class="table_fields_top">
    <% @task_lists.each do |task_list| %>
        <td class="table-row">
          <button><</button>
          <button class="button-show">v</button>
          <b><a href="/task_lists/<%= task_list.id %>"><%= task_list.task %></a></b>
          <% task_list.tasks.each do |task| %>

              <p class="task-hidden"><%= task.description %>
                <%= link_to "Delete", "/task_lists/#{task_list.id}/tasks/#{task.id}", method: :delete, data: {confirm: 'Are you sure?'} %></p>
          <% end %>
          <span class="left">
           <%= link_to "Edit", edit_task_list_path(task_list) %>
            <%= link_to "+Add Task", new_task_list_task_path(task_list) %></span>

        </td>
        </tr>
    <% end %>

    <div id="modal" class="modal">
      <button class="toggleModal">Toggle Modal!</button>
    </div>
    </table>


